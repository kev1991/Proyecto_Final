<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Proyecto final</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Proyecto_Final", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav ">
                        <li>@Html.ActionLink("Usuario", "Index", "Usuario")</li>
                        <li>@Html.ActionLink("Producto", "Index", "Producto")</li>
                        <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                        <li>@Html.ActionLink("Proveedor", "Index", "Proveedor")</li>
                        <li>@Html.ActionLink("Rol", "Index", "Rol")</li>
                        <li>@Html.ActionLink("Producto_imagen", "Index", "Producto_imagen")</li>
                        <li>@Html.ActionLink("Compra", "Index", "Compra")</li>
                        <li>@Html.ActionLink("Producto_Compra", "Index", "Producto_Compra")</li>
                        <li>@Html.ActionLink("Usuario_Rol", "Index", "Usuario_Rol")</li>
                        <li>@Html.ActionLink("Cerrar Sesion", "CloseSession", "Usuario")</li>

                    </ul>
                }
                @if (User.Identity.IsAuthenticated == false)
                {
                    <ul class="nav navbar-nav ">
                        <li>@Html.ActionLink("Iniciar Sesion", "Login", "Usuario")</li>
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >
            <p>&copy; @DateTime.Now.Year - Proyecto final ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
