@model Proyecto_Final.Models.producto_imagen

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Imagen Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Imagen del Producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.imagen)
        </dd>

        <dt>
            Nombre del Producto
        </dt>

        <dd>
            @Proyecto_Final.Controllers.Producto_ImagenController.NombreProducto(Model.id_producto)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar Producto", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
