@model IEnumerable<Proyecto_Final.Models.producto_imagen>
@{
    ViewBag.Title = "Producto Imagen";
}

<h2>Listar Producto Imagen</h2>

<p>
    @Html.ActionLink("Crear del Imagen Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Imagen Producto
        </th>
        <th>
            Nombre del Producto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                @Proyecto_Final.Controllers.Producto_ImagenController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
    }