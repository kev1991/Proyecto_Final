@model IEnumerable<Proyecto_Final.Models.usuariorol>
@{
    ViewBag.Title = "Usuario Rol";
}

<h2>Lista de Usuario Rol</h2>

<p>
    @Html.ActionLink("Registrar Usuario Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descripcion del Rol
        </th>
        <th>
            Nombre del Usuario
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Proyecto_Final.Controllers.Usuario_RolController.Descripcion_Rol(item.idUsuario)
            </td>
            <td>
                @Proyecto_Final.Controllers.Usuario_RolController.Nombre_Usuario(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}